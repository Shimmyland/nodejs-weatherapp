    "main": "server.js",
    "type": "module",
    "engines": {
        "node": "~20.18.0"
    },
    "scripts": {
        "api:dev": "nodemon ./dist/api/server.js | pino-pretty",
        "api:prod": "npx tsc -p ./tsconfig.build.json && node ./dist/api/server.js",
        "api:test": "node ./dist/api/server.js",
        "compile": "npx tsc -p ./tsconfig.build.json",
        "coverage": "nyc mocha --config .mocharc.js",
        "docker:prod": "docker-compose --env-file .env.prod -f docker-compose.yml up -d --force-recreate",
        "docker:test": "docker-compose --env-file .env.test -f docker-compose.no-api.yml up -d --force-recreate",
        "format": "prettier --write ./src",
        "lint": "eslint ./src",
        "test": "NODE_ENV=test mocha"
    },
